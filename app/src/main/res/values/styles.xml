<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/BaseTheme">

    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent="@style/BaseTheme">

    </style>
    <!-- 自定义字体大小，一般使用默认即可 -->
    <style name="BottomTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TopTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MeItemStyle">
        <item name="android:background">@drawable/bg_me_item</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/rgb_333333</item>
        <item name="android:textSize">@dimen/text_large2</item>
    </style>

    <style name="MeItemLineStyle">
        <item name="android:background">@color/rgb_e9e9e9</item>
    </style>

    <style name="NoDataText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/rgb_333333</item>
        <item name="android:textSize">@dimen/text_large2</item>
    </style>

    <style name="TitleText">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/rgb_333333</item>
        <item name="android:textSize">@dimen/text_large2</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="DescText">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/rgb_969696</item>
        <item name="android:textSize">@dimen/text_large1</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="SettingTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/rgb_333333</item>
        <item name="android:textSize">@dimen/text_large1</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="SettingItemStyle">
        <item name="android:background">@drawable/bg_setting_item</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/rgb_969696</item>
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:layout_marginLeft">32dp</item>
    </style>

    <style name="SettingTitleLineStyle">
        <item name="android:background">@color/rgb_e9e9e9</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="SettingLineStyle">
        <item name="android:background">@color/rgb_e9e9e9</item>
        <item name="android:layout_marginLeft">32dp</item>
    </style>

    <style name="EditStyle">
        <item name="android:gravity">left</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColor">@color/rgb_333333</item>
        <item name="android:textColorHint">@color/rgb_969696</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

</resources>
